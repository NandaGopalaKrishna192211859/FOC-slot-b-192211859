#include<stdio.h>

int main()
{
	int i, number, sum=0;
	
	printf("\n please enter the maximum limit value: ");
	scanf("%d", &number);
	
	printf("\n odd numbers between 0 and %d are:", number);
	for (i=1;i<=number; i++)
	{
		if(i%2 !=0)
		{
			printf("%d\n ",i);
			sum = sum+ i;
		}
	}
	printf("\n the sum of all odd numbers upto %d is %d", number, sum);
	
	return 0;
}
