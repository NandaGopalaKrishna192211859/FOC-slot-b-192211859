#include<stdio.h>

int main()
{
	int i, number, sum=0;
	
	printf("\n please enter the maximum limit value: ");
	scanf("%d", &number);
	
	printf("\n even numbers between 0 and %d are:", number);
	for (i=1;i<=number; i++)
	{
		if(i%2 ==0)
		{
			printf("%d ",i);
			sum = sum+ i;
		}
	}
	printf("\n the sum of all even number upto %d = %d", number, sum);
	
	return 0;
}
